# Top-level configuration
root = true

# Global settings for all files
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 79

# NOTE: Long attributes like href, integrity, and placeholder may exceed
# max_line_length. This is intentional and accepted for readability and
# copy-paste convenience.

# Python files — Black + PEP 8
[*.py]
indent_size = 4
max_line_length = 79

# Django templates — djLint
[*.html]
indent_size = 2
max_line_length = 79
djlint_profile = django
djlint_ignore = H030
djlint_preserve_blank_lines = true

# CSS
[*.css]
indent_size = 2

# JavaScript
[*.js]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
